{
	"name": "oraide",
	"displayName": "oraide",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:miniyaml",
		"onLanguage:yaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "miniyaml",
				"extensions": [
					".yaml",
					".miniyaml",
					".oraml"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "miniyaml",
				"scopeName": "source.miniyaml",
				"path": "./syntaxes/miniyaml.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "OpenRA IDE Configuration",
			"properties": {
				"oraide.server.path": {
					"type": "string",
					"default": "D:\\Work.Personal\\OpenRA\\Oraide\\server\\bin\\Oraide.LanguageServer.dll",
					"description": "Path to the Language Server executable/binary to run."
				},
				"oraide.game.path": {
					"type": "string",
					"default": "",
					"description": "Path to the default OpenRA repository or installation folder."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"lazystream": "^1.0.1",
		"vscode-languageclient": "^7.0.0"
	}
}
